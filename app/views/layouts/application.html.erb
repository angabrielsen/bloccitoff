<!DOCTYPE html>
<html>
<head>
  <title>Bloccitoff</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <%= google_webfonts_init(google: ['Raleway']) %>
</head>
<body>

<div class="flash">
  <%= render partial: 'shared/flash' %>
</div>

<% if user_signed_in? %>
	Hi, <strong><%= current_user.email %></strong> |
	<%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> - <%= link_to "Sign Out", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
<% end %>

<% if user_signed_in? %>
	<div class="container">
<% else %>
	<div class="container" style="margin-top: 20px;">
<% end %>
	<div class="row">
		<div class="eight columns offset-by-two">
			<%= yield %>
		</div>
	</div>
</div>

</body>
</html>
