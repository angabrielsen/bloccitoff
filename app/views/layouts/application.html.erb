<!DOCTYPE html>
<html>
<head>
  <title>Bloccitoff</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <%= google_webfonts_init(google: ['Raleway']) %>
</head>
<body>

<div class="flash">
  <% if flash[:notice] %>
    <div class="alert alert-success" style="background-color: #009933; color: #FFF; padding-left: 15px;">
      <!--<button type="button" class="close" data-dismiss="alert">&times;</button>-->
      <%= flash[:notice] %>
    </div>
  <% elsif flash[:error] %>
    <div class="alert alert-danger" style="background-color: #ff0000; color: #FFF; padding-left: 15px;">
      <!--<button type="button" class="close" data-dismiss="alert">&times;</button>-->
      <%= flash[:error] %>
    </div>
  <% elsif flash[:alert] %>
    <div class="alert alert-warning">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:alert] %>
    </div>
  <% end %>
</div>

<% if user_signed_in? %>
	Hi, <strong><%= current_user.email %></strong> |
	<%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> - <%= link_to "Sign Out", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
<% end %>

<% if user_signed_in? %>
	<div class="container">
<% else %>
	<div class="container" style="margin-top: 20px;">
<% end %>
	<div class="row">
		<div class="eight columns offset-by-two">
			<%= yield %>
		</div>
	</div>
</div>

</body>
</html>
