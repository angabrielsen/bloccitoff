<div class="twelve columns">
	<% if @user_items.count < 1 %>
		<p>Make a to-do!</p>
	<% else %>
		<% @user_items.each do |item| %>
			<%= content_tag :div, id: "item-#{item.id}" do %>
				<%= link_to [current_user, item], method: :delete, remote: :true  do%>
					<%= fa_icon "minus-square" %>
				<% end %>
				<%= item.name %><br />
				<%= time_left(item) %>
			<% end %>
		<% end %>
	<% end %>
</div>