<div class="twelve columns">
	<% if @user_items.count < 1 %>
		<p>Make a to-do!</p>
	<% else %>
		<% @user_items.each do |item| %>
			<%= content_tag :div, id: "item-#{item.id}" do %>
				<%= link_to "Delete", [current_user, item], method: :delete, remote: :true %>
				<%= item.name %><br />
				<%= item.time_left %>
			<% end %>
		<% end %>
	<% end %>
</div>