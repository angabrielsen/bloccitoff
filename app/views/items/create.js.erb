<% if @item.valid? %>
	$('#all_items').prepend("<%= escape_javascript(render partial: 'items/item', locals: {item: @item}) %>")
	$('#new_item').trigger('reset')
	$('.flash').html("<%= escape_javascript(render partial: 'shared/flash')%>")
<% else %>
	$('.flash').html("<%= escape_javascript(render partial: 'shared/flash')%>")
<% end %>